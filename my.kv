<MyGridLayout>

    name:name
    pizza:pizza
    color:color


    GridLayout:
        cols:1
        size:root.width,root.height

        GridLayout:
            cols:2

            Label:
                text:"Name"
            TextInput:
                id:name
                multiline:False
                font_size:20

            Label:
                text:"Favourite Pizza"
            TextInput:
                id:pizza
                multiline:False
                font_size:20

            Label:
                text:"Favourite Color"
            TextInput:
                id:color
                multiline:False
                font_size:20

        Button:
            text:"Submit"
            font_size:20
            on_press:root.press()
            #RGB - A
            background_color : (1,1,1,1)

